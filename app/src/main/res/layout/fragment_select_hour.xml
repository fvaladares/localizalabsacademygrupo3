<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.localizalabsacademy.mobile.rentacar.model.RentViewModel" />

        <variable
            name="selectHourFragment"
            type="com.localizalabsacademy.mobile.rentacar.ui.SelectHourFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/std_margin"
        tools:context=".ui.SelectHourFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_hour_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/list_item_hour" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> selectHourFragment.pickHour()}"
            android:text="@string/ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>